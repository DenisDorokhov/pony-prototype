<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="net.dorokhov.pony.web.client.Resources"></ui:with>

	<g:FlowPanel styleName="{res.style.album}">
		<g:FlowPanel styleName="{res.style.albumImage}">
			<g:Image ui:field="albumImage" />
		</g:FlowPanel>
        <g:FlowPanel styleName="{res.style.albumInfo}">
            <g:FlowPanel styleName="{res.style.albumHeader}" >
                <g:Label ui:field="albumNameLabel" styleName="{res.style.albumName}" />
                <g:Label ui:field="albumYearLabel" styleName="{res.style.albumYear}" />
            </g:FlowPanel>
            <g:FlowPanel ui:field="songListPanel"></g:FlowPanel>
        </g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder>