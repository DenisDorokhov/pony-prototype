<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.rootContainer {
			min-width: 600px;
			min-height: 400px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName="{style.rootContainer}">

		<g:north size="112">
			<g:DockLayoutPanel unit="PX">

				<g:west size="200">
					<g:SimpleLayoutPanel ui:field="logoContainer" />
				</g:west>

				<g:center>
					<g:SimpleLayoutPanel ui:field="playerContainer" />
				</g:center>

				<g:east size="200">
					<g:SimpleLayoutPanel ui:field="searchContainer" />
				</g:east>

			</g:DockLayoutPanel>
		</g:north>

		<g:center>
			<g:SimpleLayoutPanel ui:field="contentContainer" />
		</g:center>

	</g:DockLayoutPanel>

</ui:UiBinder>