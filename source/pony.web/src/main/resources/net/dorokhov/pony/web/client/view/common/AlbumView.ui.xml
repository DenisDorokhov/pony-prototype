<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style type="net.dorokhov.pony.web.client.view.common.AlbumView.AlbumViewStyle">
		.albumImage {
			max-width: 100px;
			max-height: 100px;
		}
		.nameContainer {
			max-width: 800px;
		}
		.songContainer {
			max-width: 800px;
		}
		.trackColumn {
			width: 20px;
			text-align: right;
		}
		.durationColumn {
			width: 40px;
			text-align: right;
		}
	</ui:style>

	<g:HorizontalPanel width="100%">
		<g:cell width="100px">
			<g:Image ui:field="albumImage" styleName="{style.albumImage}" />
		</g:cell>
		<g:cell>
			<g:VerticalPanel width="100%">
				<g:cell>
					<g:HorizontalPanel width="100%" styleName="{style.nameContainer}" >
						<g:cell>
							<g:HTMLPanel>
								<h2><g:Label ui:field="albumNameLabel" /></h2>
							</g:HTMLPanel>
						</g:cell>
						<g:cell horizontalAlignment="right">
							<g:HTMLPanel>
								<h2><g:Label ui:field="albumYearLabel" /></h2>
							</g:HTMLPanel>
						</g:cell>
					</g:HorizontalPanel>
				</g:cell>
				<g:cell>
                    <g:FlowPanel ui:field="songListPanel"></g:FlowPanel>
				</g:cell>
			</g:VerticalPanel>
		</g:cell>
	</g:HorizontalPanel>

</ui:UiBinder>