<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="mes" type="net.dorokhov.pony.web.client.Messages" />
    <ui:with field="res" type="net.dorokhov.pony.web.client.Resources" />

	<g:PopupPanel autoHideOnHistoryEventsEnabled="true" autoHideEnabled="true" glassEnabled="true">

		<g:HTMLPanel width="500px" height="400px" styleName="{res.cssCommon.popupContent}">
            <g:FlowPanel styleName="{res.cssCommon.settingsHeader}">
                <g:Label text="{mes.settingsHeader}" />
            </g:FlowPanel>

            <g:DeckPanel ui:field="deck">

                <g:Label ui:field="loadingLabel" text="{mes.commonLoadingLabel}" />

                <g:Label ui:field="errorLabel" text="{mes.commonErrorLabel}" />

                <g:HTMLPanel ui:field="formPanel">

                    <g:FlowPanel styleName="{res.cssCommon.controlGroup}">
                        <g:Label styleName="{res.cssCommon.controlLabel}">
                            <ui:text from="{mes.settingsLibraryFiles}" />
                        </g:Label>

                        <g:TextBox ui:field="libraryFoldersText" width="100%" />
                    </g:FlowPanel>

                    <g:FlowPanel styleName="{res.cssCommon.controlGroup}">
                        <g:Label styleName="{res.cssCommon.controlLabel}">
                            <ui:text from="{mes.settingsAutoScan}" /><br />
                        </g:Label>

                        <g:ListBox ui:field="autoScanIntervalList">
                            <g:item value="3600" text=""><ui:text from="{mes.settingsAutoScanEveryHour}" /></g:item>
                            <g:item value="86400"><ui:text from="{mes.settingsAutoScanEveryDay}" /></g:item>
                            <g:item value="604800"><ui:text from="{mes.settingsAutoScanEveryWeek}" /></g:item>
                            <g:item value="0"><ui:text from="{mes.settingsAutoScanOff}" /></g:item>
                        </g:ListBox>
                    </g:FlowPanel>

                    <g:FlowPanel styleName="{res.cssCommon.controlGroup}">
                        <g:Button ui:field="saveButton" text="{mes.commonSaveLabel}" />
                    </g:FlowPanel>

                </g:HTMLPanel>

            </g:DeckPanel>

            <g:FlowPanel styleName="{res.cssCommon.settingsHeader}">
                <g:Label text="{mes.settingsLibraryScanningHeader}" />
            </g:FlowPanel>

            <g:FlowPanel styleName="{res.cssCommon.controlGroup}">
                <g:Label styleName="{res.cssCommon.controlLabel}">
                    <ui:text from="{mes.settingsLastScan}" />
                </g:Label>
                <g:InlineLabel ui:field="scanResultLabel" />
                <g:Button ui:field="scanButton" text="Scan Now" />
            </g:FlowPanel>

            <g:FlowPanel styleName="{res.cssCommon.controlGroup}">
                <g:Label styleName="{res.cssCommon.controlLabel}">
                    <ui:text from="{mes.settingsScanProgress}" />
                </g:Label>
                <g:InlineLabel ui:field="progressLabel" />

                <g:FlowPanel styleName="{res.cssCommon.progress}">
                    <g:FlowPanel ui:field="progressBar" styleName="{res.cssCommon.progressBar}"></g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>



		</g:HTMLPanel>

	</g:PopupPanel>

</ui:UiBinder>