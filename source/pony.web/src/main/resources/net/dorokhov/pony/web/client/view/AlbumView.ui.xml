<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="res" type="net.dorokhov.pony.web.client.Resources" />

	<g:FlowPanel ui:field="albumView" styleName="{res.cssAlbumList.album}">
		<g:FlowPanel styleName="{res.cssAlbumList.albumImage}">
			<g:Image ui:field="albumImage" />
		</g:FlowPanel>
		<g:FlowPanel styleName="{res.cssAlbumList.albumInfo}">
			<g:FlowPanel styleName="{res.cssAlbumList.albumHeader}" >
				<g:Label ui:field="albumNameLabel" styleName="{res.cssAlbumList.albumName}" />
				<g:Label ui:field="albumYearLabel" styleName="{res.cssAlbumList.albumYear}" />
			</g:FlowPanel>
			<g:FlowPanel ui:field="songsPanel" />
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder>