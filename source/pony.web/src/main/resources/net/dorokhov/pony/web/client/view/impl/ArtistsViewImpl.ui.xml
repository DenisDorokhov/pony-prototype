<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:p="urn:import:net.dorokhov.pony.web.client.view.common">

	<g:SplitLayoutPanel>
		<g:west size="250">
			<g:DeckLayoutPanel ui:field="artistsDeck">
				<g:Label ui:field="artistsLoadingLabel" text="Loading..." />
				<g:ScrollPanel ui:field="artistsScroller">
					<c:CellList ui:field="artistsView" />
				</g:ScrollPanel>
			</g:DeckLayoutPanel>
		</g:west>
		<g:center>
			<g:DeckLayoutPanel ui:field="albumsDeck">
				<g:Label ui:field="albumsLoadingLabel" text="Loading..." />
				<p:AlbumListView ui:field="albumListView" />
			</g:DeckLayoutPanel>
		</g:center>
	</g:SplitLayoutPanel>

</ui:UiBinder>