<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:p="urn:import:net.dorokhov.pony.web.client.view.common">

	<ui:style src="ArtistsViewImpl.css" />

	<g:SplitLayoutPanel>
		<g:west size="200">
			<g:DeckLayoutPanel ui:field="artistsContainer">
				<g:Label ui:field="artistsLoadingLabel" text="Loading..." />
				<c:CellList ui:field="artistsView" styleName="{style.artistList}" />
			</g:DeckLayoutPanel>
		</g:west>
		<g:center>
			<g:DeckLayoutPanel ui:field="albumsContainer">
				<g:Label ui:field="albumsLoadingLabel" text="Loading..." />
				<p:AlbumsView ui:field="albumsView" />
			</g:DeckLayoutPanel>
		</g:center>
	</g:SplitLayoutPanel>

</ui:UiBinder>