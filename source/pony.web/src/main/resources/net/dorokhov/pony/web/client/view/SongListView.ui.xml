<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="net.dorokhov.pony.web.client.Resources" />

    <g:FlowPanel styleName="{res.style.albumDisc}">
        <g:Label ui:field="captionLabel" styleName="{res.style.albumDiscHeader}" />
        <g:FlowPanel ui:field="songListView" styleName="{res.style.songList}" />
    </g:FlowPanel>

</ui:UiBinder>