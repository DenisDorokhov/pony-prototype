<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="net.dorokhov.pony.web.client.Resources" />

	<ui:style>
		.rootContainer {
			min-width: 825px;
			min-height: 400px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName="{style.rootContainer}">

		<g:north size="112">
            <g:FlowPanel styleName="{res.cssHeader.headerBlock}">
                <g:FlowPanel ui:field="logoContainer" styleName="{res.cssHeader.logo}" />
                <g:FlowPanel ui:field="playerContainer" styleName="{res.cssHeader.playerContainer}" />
                <g:FlowPanel ui:field="searchContainer" styleName="{res.cssHeader.searchContainer}" />
            </g:FlowPanel>
		</g:north>

		<g:center>
			<g:SimpleLayoutPanel ui:field="contentContainer" />
		</g:center>

	</g:DockLayoutPanel>

</ui:UiBinder>