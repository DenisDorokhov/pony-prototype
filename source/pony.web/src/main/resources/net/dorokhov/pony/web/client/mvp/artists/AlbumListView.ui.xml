<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="net.dorokhov.pony.web.client.Resources" />

	<g:DeckLayoutPanel ui:field="deck">

		<g:Label ui:field="loadingLabel" text="Loading..." />

		<g:Label ui:field="errorLabel" text="Error!" />

		<g:Label ui:field="noDataLabel" text="No data!" />

		<g:DockLayoutPanel ui:field="content">

			<g:north size="50">
				<g:HTMLPanel>
					<g:Label ui:field="artistNameLabel" styleName="{res.songlist.artistName}" />
				</g:HTMLPanel>
			</g:north>

			<g:center>
				<g:ScrollPanel ui:field="scroller">
					<g:FlowPanel ui:field="albumsPanel" />
				</g:ScrollPanel>
			</g:center>

		</g:DockLayoutPanel>

	</g:DeckLayoutPanel>

</ui:UiBinder>