<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style type="net.dorokhov.pony.web.client.mvp.artist.SongListItem.SongListItemStyle">
        .songListItem {
            clear: both;
            overflow: auto;
            cursor: pointer;
        }
        .trackNumber {
            float: left;
            width: 50px;
            min-height: 1em;
            text-align: center;
        }
        .songName {
            float: left;
        }
        .songDuration {
            float: right;
        }
    </ui:style>

    <g:FocusPanel ui:field="songItemPanel" styleName="{style.songListItem}">
        <g:FlowPanel styleName="{style.songListItem}">
            <g:Label ui:field="trackNumberLabel" styleName="{style.trackNumber}"></g:Label>
            <g:Label ui:field="songNameLabel" styleName="{style.songName}"></g:Label>
            <g:Label ui:field="songDurationLabel" styleName="{style.songDuration}"></g:Label>
        </g:FlowPanel>
    </g:FocusPanel>

</ui:UiBinder>